<% provide(:title, 'BC-aux') %>
<h1>Confirmacion Bodeguero Central</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(BodegueroCentral.new, url: aux_bodcentral_path) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.label "Bodega Central" %>
      <%= f.select :bodega_central_id, BodegaCentral.all.map{ |bc| [bc.localizacion, bc.id] } %>

      <%= f.label "Bodeguero Asociado" %>
      <%= f.select :encargado_compra_id, EncargadoCompra.all.map{ |e| [e.user.name, e.id] } %>

      <%= f.hidden_field :user_id, value: current_user.id %>

      <%= f.submit "Confirmar", class: "btn btn-primary" %>

    <% end %>

  </div>
</div>
