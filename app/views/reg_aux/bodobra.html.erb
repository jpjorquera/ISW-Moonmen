<% provide(:title, 'BO-aux') %>
<h1>Confirmacion Bodeguero de Obra</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(BodegueroObra.new, url: aux_bodobra_path) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.label "Bodega Obra" %>
      <%= f.select :bodega_obra_id, BodegaObra.all.map{ |bo| [bo.localizacion, bo.id] } %>

      <%= f.label "Bodeguero Asociado" %>
      <%= f.select :bodeguero_central_id, BodegueroCentral.all.map{ |bc| [bc.user.name, bc.id] } %>

      <%= f.hidden_field :user_id, value: current_user.id %>

      <%= f.submit "Confirmar", class: "btn btn-primary" %>

    <% end %>

  </div>
</div>
