<% provide(:title, 'BC-aux') %>
<h1>Confirmacion Bodeguero Central</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= current_user.id %>
    <%= form_for(@BC, url: bc_aux_path) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.label :bodega_central_id %>
      <%= f.select(:bodega_central_id, @BaC_data) %>

      <%= f.label :encargado_compra_id %>
      <%= f.select(:encargado_compra_id, @BaC_data) %>

      <%= f.label :user_id, current_user.id %>

      <%= f.submit "Confirmar", class: "btn btn-primary" %>

    <% end %>

  </div>
</div>
