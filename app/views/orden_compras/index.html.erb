<p id="notice"><%= notice %></p>

<h1>Orden Compras</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orden_compras.each do |orden_compra| %>
      <tr>
        <td><%=  orden_compra.numero_orden %></td>
        <td><%= link_to 'Show', orden_compra %></td>
        <td><%= link_to 'Edit', edit_orden_compra_path(orden_compra) %></td>
        <td><%= link_to 'Destroy', orden_compra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<button type="button" class="btn btn-primary">Crear Orden Compra</button>'.html_safe, new_orden_compra_path %>
<%= link_to '<button type="button" class="btn btn-info">Ver Ordenes de Compra Remotas</button>'.html_safe, display_path %>
