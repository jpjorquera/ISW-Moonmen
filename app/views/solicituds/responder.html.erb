<h1> Solicitud #<%=@solicitud.id%> - de <%=@solicitud.bodega_obra.localizacion%> </h1>

<div class="container">
    <div class="row">
    <div class="col-md-4 col-md-offset-2">
        <table class="table table-condensed table-hover">
                <thead>
                    <tr>
                        <th> Material </th>
                        <th> Cantidad </th>
                    </tr>
                </thead>
            <% @solicitud.materials.each do |mat| %>
                    <tbody>
                        <tr>
                            <td><%= mat.nombre %></td>
                            <td><%= SolicitudMaterial.find_by(solicitud: @solicitud, material: mat).cantidad%></td>
                        </tr>
                    </tbody>
            <%end%>
        </table>
        </div>
    </div>
</div>
